% This file managed by Puppet
% Template Path: <%= module_name %>/templates/rabbitmq.config
[
  {rabbit, [
<% if config_cluster -%>
    {cluster_nodes, [<%= cluster_disk_nodes.map { |n| "\'rabbit@#{n}\'" }.join(', ') %>]}]}<% if @ssl %>,<% end %>
<% end -%>
<% if @ssl -%>
    {ssl_listeners, [<%= ssl_port %>]},
    {ssl_options, [
                    {cacertfile,"/etc/rabbitmq/ssl/cacert.pem"},
                    {keyfile,"/etc/rabbitmq/ssl/server_key.pem"},
                    {certfile,"/etc/rabbitmq/ssl/server_cert.pem"},
                    {verify,verify_peer},
                    {fail_if_no_peer_cert,true}]}<% if config_stomp %>,<% end %>
<% end %>
<% if config_stomp -%>
% Configure the Stomp Plugin listening port
    {rabbitmq_stomp, 
      [{tcp_listeners, [<%= stomp_port %>]}<% if @ssl %>,
       {ssl_listeners, [<%= ssl_stomp_port %>]}
      <% end -%>]}
<% end -%>
  ]}
].
% EOF
